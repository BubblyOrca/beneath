{
  "editor.formatOnPaste": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/node_modules": true,
    "**/.venv": true,
    "**/.next": true,
    "**/.pytest_cache": true,
    "clients/python/__pycache__": true,
    "clients/python/.pytest_cache": true,
    "clients/python/.ipynb_checkpoints": true,
    "clients/python/dist": true,
    "clients/python/build": true,
    "clients/python/*.egg-info": true,
  },
  "go.formatTool": "goimports",
  "go.testFlags": [
    "-v"
  ],
  "go.vetFlags": [
    "-structtag=false"
  ],
  "go.testEnvVars": {
    "ENV": "test"
  },
  "go.inferGopath": false,
  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.pythonPath": "clients/python/.venv/bin/python",
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    ".",
    "-p",
    "test*.py"
  ],
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false
}
